{% extends getPartial('page-design') %}

{% block PartialHead %}
    <meta name="robots" content="NOINDEX, NOFOLLOW">
    <title>{{ trans("Ceres::Template.myAccount") }} | {{ config("Ceres.header.company_name") }}</title>
{% endblock %}

{% block PageBody %}

    {{ component( "Ceres::Customer.Components.AddressSelect.AddressSelect" ) }}
    {{ component( "Ceres::MyAccount.Components.AccountSettings" ) }}
    {{ component( "Ceres::MyAccount.Components.History" ) }}
    {{ component( "Ceres::MyAccount.Components.BankDataSelect" ) }}

    <div class="page-content myaccount container-max m-b-3 m-t-1">
        <!-- HEADER -->
        <div class="row m-b-3">
            <div class="col-sm-9">
                <h1 class="h2">{{ trans("Ceres::Template.myAccount") }}</h1>
                {% if frontend.Account.getIsAccountLoggedIn %}
                    {% if contact.firstName|length > 0 and contact.lastName|length > 0 %}
                        <span class="text-muted">{{ trans("Ceres::Template.myAccountHello", {"username": contact.firstName ~ " " ~ contact.lastName}) }}</span>
                    {% else %}
                        <span class="text-muted">{{ trans("Ceres::Template.myAccountHello", {"username": contact.email}) }}</span>
                    {% endif %}
                {% endif %}
            </div>
            <div class="col-sm-3">
                <a href="#" class="btn btn-danger pull-xs-right btn-medium" v-logout>
                    <i class="fa fa-sign-out"></i>
                    {{ trans("Ceres::Template.myAccountLogout") }}
                </a>
            </div>
            <div class="col-xs-12">
                <hr class="">
            </div>
        </div>
        <!-- ./HEADER -->

        <!-- ADDRESS AREA -->
        <div class="row">
            <div class="col-md-6">
                <h4>
                    {{ trans("Ceres::Template.myAccountInvoiceAddresses") }}
                </h4>
                <p class="text-muted small font-italic">{{ trans("Ceres::Template.myAccountAll") }} {{ trans("Ceres::Template.myAccountInvoiceAddresses") }}</p>
                <div class="shipping-addresses-select">
                    <invoice-address-select :address-list="{{ billingAddressList | json_encode() }}"
                                            :contact="{{ contact | json_encode }}"
                                            :selected-address-id="{{ selectedBillingAddressId | json_encode }}"></invoice-address-select>
                </div>
            </div>
            <div class="col-md-6">
                <h4>
                    {{ trans("Ceres::Template.myAccountShippingAddresses") }}
                </h4>
                <p class="text-muted small font-italic">{{ trans("Ceres::Template.myAccountAll") }} {{ trans("Ceres::Template.myAccountShippingAddresses") }}</p>
                <div class="shipping-addresses-select">
                    <shipping-address-select :address-list="{{ deliveryAddressList | json_encode() }}"
                                             :selected-address-id="{{ selectedDeliveryAddressId | json_encode }}"></shipping-address-select>
                </div>
            </div>
        </div>
        <!-- ./ADDRESS AREA -->

        <!-- ACCOUNT SETTINGS AREA -->
        <div class="row">
            <div class="col-md-6">
                <h4>
                    {{ trans("Ceres::Template.myAccountSettings") }}
                </h4>
                <p class="text-muted small font-italic">{{ trans("Ceres::Template.myAccountChangeLoginData") }}</p>

                <div class="card m-b-3">
                    <account-settings template="#vue-account-settings" :user-data="{{ contact }}">
                        <account-settings>
                </div>
            </div>

            <div class="col-md-6">
                <h4>
                    {{ trans("Ceres::Template.myAccountBankDetails") }}
                </h4>


                <p class="text-muted small font-italic">{{ trans("Ceres::Template.myAccountChangePaymentInformation") }}</p>
                <bank-data-select template="#vue-bank-data-select" :user-bank-data="{{ userBankData | json_encode }}"
                                  contact-id="{{ frontend.Account.AccountContactId }}"></bank-data-select>

            </div>
        </div>
        <!-- ./ACCOUNT SETTINGS AREA -->

    </div>

    {% set ordersPerPage = config("Ceres.my_account.orders_per_page") %}
    {% if not (ordersPerPage matches '/^\\d+$/') %}
        {# config value is not a valid number #}
        {% set ordersPerPage = 5 %}
    {% endif %}

    <!-- HISTORY -->
    <history template="#vue-history" 
            :orders-per-page="{{ ordersPerPage }}"
            :is-return-active="{{ ceresConfig.myAccount.orderReturnActive | json_encode }}"
            :contact-has-returns="{{ contactHasReturns | json_encode }}">
    </history>
    <!-- ./HISTORY -->
    
{% endblock %}
